<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blog</title>
 <link rel="stylesheet" href="/css/style.css">
    
</head>
<body>
   <%- include("./partials/nav") %>
<div class="container mt-4">

  <h1> <%=blog.title %></h1>
  <img src="<%= blog.coverImage %>" width="700px"/>
<pre>  <%= blog.body %></pre>

</div>

<div class="container mt-4">
<img src="<%= blog.createdBy.profileImage %>" class="pic">
 <%= blog.createdBy.FullName %>

</div>

<div class="container mt-3">
   <h1> Comments( <%= comment.length %>)</h1>
<% if (locals.user) { %>
     <form action="/blog/comment/<%= blog._id %>" method="post">


  <div class="mb-3">
    <input type="text" 
    class="form-control" 
  id="content"
  name="content"
  placeholder="Enter your Coments"
  >
   
  </div>

  <button type="submit" class="btn btn-primary">Add</button>
</form>
 
<% } %>


</div>
<div class="container mt-3">

<% comment.forEach(comments => { %>
  <div>
  <img src="<%= comments.createdBy.profileImage %>" class="pic">
 <%= comments.createdBy.FullName %>  
 <pre> <%= comments.content %></pre>
  </div>
 
<% }) %>


</div>
   <%- include("./partials/scripts") %>

 </body>

 </html>